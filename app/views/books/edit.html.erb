<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", :size => "50" %><br>
      </div>

      <div class="form-group">
        <label for="inputBody">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id: "inputBody", :size =>"50" %><br>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" %><br>
      </div>
      <span>
        <%= link_to "Show", book_path(@book) %>
      </span>
      |
      <span>
        <%= link_to "Back", "/books" %>
      </span>

      <% end %>

    </div>
  </div>
</div>



