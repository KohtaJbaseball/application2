
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image("100x100") %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <%= link_to edit_user_path(@book.user) do %>
            <div class= "edit btn btn-outline-secondary btn-default btn-block">
              <span class= "glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <i class="fas fa-user-cog"></i>
            </div>
          <% end %>

      <h2 class="mt-3">New book</h2>
        <%= form_with(model: @booknew, local: true) do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <br><%= f.text_field :title %></br>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <br><%= f.text_area :body %></br>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
    </div>


      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= image_tag @book.user.get_profile_image("50x50") %><br>
                    <%= @book.user.name %>
                  <% end %>
                </td>
                <td><%= link_to @book.title, book_path(@book.id) %></a></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
                <% end %>
                <% if @book.user == current_user %>
                <td><%= link_to "Destroy", destroy_book_path(@book), method: :delete, "data-confirm" => "realy?", class: "btn btn-sm btn-success" %></td>
                <% end %>
              </tr>
          </table>
      </div>

  </div>
</div>


