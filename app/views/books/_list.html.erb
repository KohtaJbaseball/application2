
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image("100x100") %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <%= link_to edit_user_path(current_user.id) do %>
            <div class= "edit btn btn-outline-secondary btn-default btn-block">
              <span class= "glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <i class="fas fa-user-cog"></i>
            </div>
          <% end %>
