<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', books: @books %>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @booknew, local: true do |f| %>

          <div class="form-group">
            <label for="book_title">Title</label>
            <br><%= f.text_field :title %></br>
          </div>

          <div class="form-group">
            <label for="book_body">Opinion</label>
            <br><%= f.text_area :body %></br>
          </div>

          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image("50x50") %></td>
              <td><%= user.name%></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
