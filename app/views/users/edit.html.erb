<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>

      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
      </div>

      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
      </div>

      <div class="from-group">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %><br>
      </div>

      <div class="from-group">
        <%= f.submit "Update User", class: "btn-secondary" %>
      </div>

      <% end %>
