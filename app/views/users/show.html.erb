<div class="container">
 <div class="row">
  <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image("100x100") %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
          <%= link_to edit_user_path(@user.id) do %>
            <div class= "edit btn btn-outline-secondary btn-default btn-block">
              <span class= "glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <i class="fas fa-user-cog"></i>
            </div>
          <% end %>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @booknew, local: true do |f| %>

          <div class="form-group">
            <label for="book_title">Title</label>
            <br><%= f.text_field :title %></br>
          </div>

          <div class="form-group">
            <label for="book_body">Opinion</label>
            <br><%= f.text_area :body %></br>
          </div>

          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
    </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
       <table class="table">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
             <%= link_to user_path(@user.id) do %>
              <%= image_tag book.user.get_profile_image("50x50") %>
             <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
       </table>
   </div>
 </div>
</div>
